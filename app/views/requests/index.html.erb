<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Display name</th>
      <th>Reason</th>
      <th>Dollar amount</th>
      <th>User Id</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.display_name %></td>
        <td><%= request.reason %></td>
        <td><%= request.dollar_amount %></td>
        <td><%= request.user_id %></td>
        <td>
          <% if request.image.attached? %>
    <%= image_tag(request.image, style: "width: 200px; display: block") %>
    <% end %>
        </td>
        <td><%= link_to 'Give', request %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path, class:"btn btn-dark" %>
