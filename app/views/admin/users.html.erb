<% if !notice.nil? %>
    <div class="alert alert-primary" role="alert">
    <%= notice %>
    </div>
<% end %>

<h1 class="mt-5">Users</h1>

<table class="table table-dark">
  <thead>
    <tr>
    <th>User ID</th>
      <th>Email</th>
      <th>Registed Date</th>
      <%# <th colspan="1"></th> %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at %></td>
        <td><%= button_to "Delete", "#{admin_users_path}/#{user.id}", method: :delete, class: "btn btn-danger" %></td>
      </tr>
         
    <% end %>
  </tbody>
</table>



